{
  "manifest_version": 3,
  "name": "OpenSidebar",
  "version": "1.0",
  "description": "AI extension sidebar using OpenCode SDK",
  "permissions": ["sidePanel", "storage", "activeTab", "contextMenus", "scripting", "tabs"],
  "host_permissions": ["https://opencode.ai/*", "https://*/*", "http://*/*", "<all_urls>"],
  "side_panel": {
    "default_path": "src/sidepanel.html"
  },
  "action": {
    "default_title": "Open AI Sidebar",
    "open_panel_on_action_click": true
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Period"
      }
    }
  }

}
